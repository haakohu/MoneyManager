<!DOCTYPE html>
<html>
  <head>
    <title>MoneyManager</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
  </head>

  <nav class="navbar navbar-light bg-faded">
    <ul class="nav navbar-nav">
      <li class="nav-item<%= ' active' if params[:controller] == 'accounts'%>">
        <a class="nav-link" <%= link_to 'Accounts',accounts_path%> <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item<%= ' active' if params[:controller] == 'transfer/transactions'%>">
        <a class="nav-link" <%=link_to 'Transaction',transfer_transactions_path%></a>
      </li>
      <li class="nav-item<%= ' active' if params[:controller] == 'master_categories'%>">
        <a class="nav-link" <%=link_to 'Categories',master_categories_path%></a>
      </li>
    </ul>
  </nav>
  <% if notice or alert %>
    <div class="alert alert-<%= notice ? "success":"danger" %>">
      <a href="#" class="close" data-dismiss="alert">x</a>
      <strong><%= notice ? notice : raw(alert) %></strong>
    </div>
  <% end %>
  <body>
    <%= yield %>
  </body>
</html>
