

<div id='accordion' role='tablist' aria-multiselectable='true'>
  <%@master_categories.each do |master_category|%>
    <div class="panel panel-default">
      <div class="panel-heading" role="tab" id="headingOne">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%=master_category.id%>" aria-expanded="true" aria-controls="collapseOne">
            <%=master_category.name%>
          </a>
        </h4>
      </div>
      <div id="collapse<%=master_category.id%>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
        <table class="table">
          <thead>
            <th>Name</th>
            <th colspan="3"></th>
          </thead>
          <tbody>
            <%categories = Category.all.find_all{|t| t.master_category == master_category}%>
            <%categories.each do |category|%>
              <tr class>
                <td><%=category.name%></td>
                <td><%=category.master_category.name%></td>
                <td><%=link_to 'Show',category_path(category)%></td>
                <td><%=link_to 'Edit', edit_category_path(category)%></td>
                <td><%=link_to 'Destroy',category,method: :delete, data: {confirm: 'Are you sure?'}%></td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
  <%end%>
</div>




