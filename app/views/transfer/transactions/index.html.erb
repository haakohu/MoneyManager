<table class="table">
  <thead>
    <tr>
      <th>From Account</th>
      <th>To account</th>
      <th>Amount</th>
      <th>Description</th>
      <th>Transfer date</th>
      <th colspan="3">
    </tr>
  </thead>
  <tbody>

    <%@transactions.each do |t| %>
    <tr>
        <td><%=t.from.name%></td>
        <td><%=t.to.name%></td>
        <td><%=t.amount%></td>
        <td><%=t.description%></td>
        <td><%=t.transfer_date%></td>
        <td><%=link_to 'Show',transfer_transaction_path(t)%></td>
        <td><%=link_to 'Edit',edit_transfer_transaction_path(t)%></td>
        <td><%= link_to 'Destroy', [:transfer, t], method: :delete, data: { confirm: 'Are you sure?' }%></td>

    </tr>

    <%end%>
  </tbody>

</table>
<%=link_to 'New transaction', new_transfer_transaction_path%>
